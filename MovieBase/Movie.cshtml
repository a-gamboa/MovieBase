@{
    /* MOVIE INFO */
    dynamic APImovieData = "";
    using (WebClient wc = new WebClient())
    {
        APImovieData = Json.Decode(wc.DownloadString("https://api.themoviedb.org/3/movie/" + (Request.QueryString["id"] != null ? Request.QueryString["id"] : "") + "?language=en-US&api_key=c5e4a1733c2995102fafe209c014e4c0"));
    }

    /* MOVIE VIDEO INFO */
    dynamic APIvideoData = "";
    using (WebClient wc = new WebClient())
    {
        APIvideoData = Json.Decode(wc.DownloadString("https://api.themoviedb.org/3/movie/" + (Request.QueryString["id"] != null ? Request.QueryString["id"] : "") + "/videos?api_key=c5e4a1733c2995102fafe209c014e4c0&language=en-US"));
    }

    /* MOVIE CREDITS INFO */
    dynamic APIcreditsData = "";
    using (WebClient wc = new WebClient())
    {
        APIcreditsData = Json.Decode(wc.DownloadString("https://api.themoviedb.org/3/movie/" + (Request.QueryString["id"] != null ? Request.QueryString["id"] : "") + "/credits?api_key=c5e4a1733c2995102fafe209c014e4c0"));
    }

}

<!DOCTYPE html>
<html lang="en">

<head>
    @RenderPage("~/Templates/Common/_Head.cshtml", new { title = APImovieData.title + " | Your movie database" })

    <link href="~/css/movie.css" rel="stylesheet">
</head>

<body class="authorpage-v2">
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top scrolling-navbar">
            <div class="container">
                <a class="navbar-brand font-weight-bold" href="~/">MovieBase</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarTogglerDemo02" aria-controls="navbarTogglerDemo02" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarTogglerDemo02">
                    <ul class="navbar-nav mr-auto smooth-scroll">
                        <li class="nav-item">
                            <a class="nav-link" href="~/">Home <span class="sr-only">(current)</span></a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="~/About" data-offset="100">About</a>
                        </li>
                    </ul>

                    <ul class="navbar-nav nav-flex-icons">
                        <li class="nav-item">
                            <a class="nav-link" href="https://www.linkedin.com/in/alvaro-gamboa"><i class="fab fa-linkedin-in light-green-text-2"></i></a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>

        <section>
            <div id="divBackground">
                <img src="@("https://image.tmdb.org/t/p/original"+APImovieData.backdrop_path)" style="width: 100%">
            </div>
        </section>
    </header>

    <main>
        <div class="container-fluid mb-5">
            <div class="row" style="margin-top: -75px;">
                <div class="col-md-12 px-lg-5">
                    <div class="card pb-5 mx-md-3">
                        <div class="card-body p-2">
                            <div class="container">
                                <h1 class="text-center h1 pt-4 mb-3" id="title">
                                    <strong class="indigo-text">@APImovieData.title</strong>
                                </h1>
                                <h6 class="text-center grey-text m-0"><i class="fas fa-quote-right mr-2"></i><em>@APImovieData.tagline</em></h6>
                                <div class="row pt-4 pt-lg-5 pt-1">
                                    <div class="col-md-4 mb-3">
                                        <img src="@("https://image.tmdb.org/t/p/w600_and_h900_bestv2" + APImovieData.poster_path)" class="img-fluid z-depth-1">
                                    </div>
                                    <div class="col-md-7 ml-xl-5">
                                        <div class="row px-3 mt-2 mt-lg-0">
                                            <div class="col-9 pl-0 pr-1">
                                                <div class="progress md-progress m-0" style="height: 20px">
                                                    <div class="progress-bar @Functions.RatingColor(APImovieData.vote_average)" role="progressbar" style="width: @(Math.Round(APImovieData.vote_average*10, 0))%; height: 20px" aria-valuenow="@(Math.Round(APImovieData.vote_average*10, 0))" aria-valuemin="0" aria-valuemax="100">User Score: @(Math.Round(APImovieData.vote_average * 10, 0))%</div>
                                                </div>
                                            </div>
                                            <div class="col-3 pr-0 pl-1">
                                                <span class="float-right">
                                                    <a class="" data-toggle="tooltip" data-placement="top" title="Add to Wishlist">
                                                        <i class="fas fa-heart heart mr-2"></i> <span>X</span>
                                                    </a>
                                                </span>
                                            </div>
                                        </div>
                                        <div class="row px-2 my-2">
                                            <div class="col-md-6 px-0">
                                                <span class="text-white btn-floating info-color-dark btn-sm"><i class="fas fa-flag"></i></span> Status: @APImovieData.status
                                            </div>
                                            <div class="col-md-6 px-0">
                                                <span class="text-white btn-floating info-color-dark btn-sm"><i class="far fa-calendar-check"></i></span> Date: @APImovieData.release_date
                                            </div>
                                            <div class="col-md-6 px-0">
                                                <span class="text-white btn-floating secondary-color-dark btn-sm"><i class="far fa-clock"></i></span> Runtime: @TimeSpan.FromMinutes(APImovieData.runtime).ToString(@"h\:mm")
                                            </div>
                                            <div class="col-md-6 px-0">
                                                <span class="text-white btn-floating success-color-dark btn-sm"><i class="fas fa-dollar-sign"></i></span> Budget: $@APImovieData.budget
                                            </div>
                                            <div class="col-md-6 px-0">
                                                <span class="text-white btn-floating success-color-dark btn-sm"><i class="fas fa-hand-holding-usd"></i></span> Revenue: $@APImovieData.revenue
                                            </div>
                                        </div>
                                        <div class="row mt-3 px-3">
                                            <h4>Overview</h4>
                                            <p class="dark-grey-text article">
                                                @Html.Raw(APImovieData.overview)
                                            </p>
                                            <blockquote class="blockquote">
                                                <p class="mb-0">
                                                    Lorem ipsum dolor sit amet, consectetur adipiscing elit. Integer posuere
                                                    erat a ante.
                                                </p>
                                                <footer class="blockquote-footer">
                                                    Someone famous in
                                                    <cite title="Source Title">Source Title</cite>
                                                </footer>
                                            </blockquote>
                                            <p class="dark-grey-text article">
                                                Ut enim ad minima veniam, quis nostrum exercitationem ullam corporis suscipit
                                                laboriosam, nisi ut aliquid ex ea commodi consequatur? Quis autem vel
                                                eum iure reprehenderit qui in ea voluptate velit esse quam nihil molestiae
                                                consequatur, vel illum qui dolorem eum fugiat quo voluptas nulla pariatur.
                                            </p>
                                        </div>
                                        <div class="row mb-2 mt-2">
                                            <div class="embed-responsive embed-responsive-16by9">
                                                <iframe class="embed-responsive-item" src="@("https://www.youtube.com/embed/" + APIvideoData.results[0].key)" allowfullscreen></iframe>
                                            </div>
                                        </div>
                                        <div class="row mb-2 mt-2">
                                            <li class="dark-grey-text article list-unstyled">
                                                <strong>Nulla volutpat aliquam velit:</strong>
                                                <ul>
                                                    <li>Phasellus iaculis neque</li>
                                                    <li>Purus sodales ultricies</li>
                                                    <li>Vestibulum laoreet porttitor sem</li>
                                                    <li>Ac tristique libero volutpat at</li>
                                                </ul>
                                            </li>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>

    @RenderPage("~/Templates/Common/_Footer.cshtml")
    @RenderPage("~/Templates/Common/_Scripts.cshtml")

    <script type="text/javascript" src="~/js/movie/movie.js"></script>

</body>

</html>